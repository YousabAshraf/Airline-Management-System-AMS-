@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 20px;
    }

    .home-container {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 24px;
        padding: 60px 50px;
        max-width: 600px;
        text-align: center;
        box-shadow: 0 15px 30px rgba(0,0,0,0.2), 0 4px 12px rgba(102,126,234,0.2);
        border: 1px solid rgba(255, 255, 255, 0.25);
        color: #fff;
        animation: fadeInUp 0.8s ease-out;
    }

        .home-container h2 {
            font-size: 36px;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #ffffff, #ffffffaa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .home-container p {
            font-size: 18px;
            color: #e0e0e0;
            margin-bottom: 30px;
        }

    .btn-primary {
        padding: 15px 30px;
        font-size: 18px;
        border-radius: 12px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: #fff;
        font-weight: 700;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(102,126,234,0.4), 0 4px 8px rgba(118,75,162,0.2);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(102,126,234,0.5), 0 6px 12px rgba(118,75,162,0.3);
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="home-container">
    <h2>Welcome to Airline Management System (AMS)</h2>
    <p>Manage your flights, passengers, and bookings efficiently.</p>
    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
        Login
    </a>
</div>
