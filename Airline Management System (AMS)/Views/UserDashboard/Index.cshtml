@{
    ViewData["Title"] = "User Dashboard";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        min-height: 100vh;
        margin: 0;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .dashboard-container {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 24px;
        padding: 50px 40px;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 15px 30px rgba(0,0,0,0.2), 0 4px 12px rgba(102,126,234,0.2);
        border: 1px solid rgba(255, 255, 255, 0.25);
        color: #fff;
        text-align: center;
        animation: fadeInUp 0.8s ease-out;
    }

        .dashboard-container h2 {
            font-size: 36px;
            margin-bottom: 15px;
            background: linear-gradient(135deg, #ffffff, #ffffffaa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .dashboard-container p {
            font-size: 18px;
            margin-bottom: 30px;
            color: #e0e0e0;
        }

        .dashboard-container ul {
            list-style: none;
            padding: 0;
            margin-bottom: 30px;
        }

            .dashboard-container ul li {
                margin: 15px 0;
            }

                .dashboard-container ul li a {
                    text-decoration: none;
                    color: #fff;
                    font-size: 18px;
                    font-weight: 600;
                    padding: 10px 20px;
                    border-radius: 12px;
                    background: rgba(255,255,255,0.1);
                    transition: all 0.3s ease;
                    display: inline-block;
                }

                    .dashboard-container ul li a:hover {
                        background: rgba(255,255,255,0.25);
                        transform: translateY(-2px);
                    }

    .btn-danger {
        padding: 12px 25px;
        font-size: 16px;
        border-radius: 12px;
        border: none;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        color: #fff;
        box-shadow: 0 8px 20px rgba(255,65,108,0.4), 0 4px 8px rgba(255,75,43,0.2);
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(255,65,108,0.5), 0 6px 12px rgba(255,75,43,0.3);
            background: linear-gradient(135deg, #ff4b2b, #ff416c);
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="dashboard-container">
    <h2>User Dashboard</h2>
    <p>Welcome, @User.Identity.Name!</p>

    <ul>
        <li><a asp-controller="Flights" asp-action="Index">View Flights</a></li>
        <li><a asp-controller="Bookings" asp-action="MyBookings">My Bookings</a></li>
    </ul>

    <form asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>
</div>
