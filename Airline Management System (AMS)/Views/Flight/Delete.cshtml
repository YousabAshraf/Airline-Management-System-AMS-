@model Airline_Management_System__AMS_.Models.Flight

@{
    ViewData["Title"] = "Delete Flight";
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <div class="avatar-circle mx-auto bg-danger bg-opacity-10 text-danger d-flex align-items-center justify-content-center rounded-circle"
                            style="width: 80px; height: 80px; font-size: 2.5rem;">
                            <i class="fas fa-trash"></i>
                        </div>
                    </div>

                    <h2 class="fw-bold text-dark mb-3">Delete Flight?</h2>
                    <p class="text-muted mb-4 lead">
                        Are you sure you want to permanently delete <strong>@Model.FlightNumber</strong>?
                        <br><span class="small text-danger fw-bold">This action cannot be undone.</span>
                    </p>

                    <div class="bg-light p-3 rounded-3 mb-4 text-start">
                        <div class="row g-2">
                            <div class="col-6 text-muted small text-uppercase fw-bold">Flight Number</div>
                            <div class="col-6 fw-bold text-end">@Model.FlightNumber</div>

                            <div class="col-6 text-muted small text-uppercase fw-bold">Route</div>
                            <div class="col-6 fw-bold text-end">@Model.Origin → @Model.Destination</div>

                            <div class="col-6 text-muted small text-uppercase fw-bold">Aircraft</div>
                            <div class="col-6 fw-bold text-end">@Model.AircraftType</div>

                            <div class="col-6 text-muted small text-uppercase fw-bold">Departure</div>
                            <div class="col-6 fw-bold text-end">@Model.DepartureTime.ToString("MMM dd, yyyy hh:mm tt")</div>

                            <div class="col-6 text-muted small text-uppercase fw-bold">Available Seats</div>
                            <div class="col-6 fw-bold text-end">@Model.AvailableSeats</div>
                        </div>
                    </div>

                    @if (Model.Bookings != null && Model.Bookings.Any())
                    {
                        <div class="alert alert-danger mb-4">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Cannot Delete:</strong> This flight has @Model.Bookings.Count active booking(s). 
                            Please cancel all bookings before deleting this flight.
                        </div>
                        <a asp-action="Index" class="btn btn-secondary btn-lg w-100">
                            Back to Flight List
                        </a>
                    }
                    else
                    {
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="FlightId" />
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger btn-lg fw-bold">
                                    <i class="fas fa-trash me-2"></i>Yes, Delete Flight Permanently
                                </button>
                                <a asp-action="Index" class="btn btn-light btn-lg">
                                    Cancel
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
