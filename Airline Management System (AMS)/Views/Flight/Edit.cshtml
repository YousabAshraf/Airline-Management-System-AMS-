@model Airline_Management_System__AMS_.ViewModels.FlightViewModel

@{
    ViewData["Title"] = "Edit Flight";
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0 fw-bold"><i class="fas fa-plane-departure me-2"></i>Edit Flight</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="FlightId" />
                        <input type="hidden" asp-for="TotalSeats" />
                        <input type="hidden" asp-for="AvailableSeats" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FlightNumber" class="form-label fw-bold">Flight Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-plane"></i></span>
                                    <input asp-for="FlightNumber" class="form-control" />
                                </div>
                                <span asp-validation-for="FlightNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AircraftType" class="form-label fw-bold">Aircraft Type</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-shuttle-space"></i></span>
                                    <input asp-for="AircraftType" class="form-control" />
                                </div>
                                <span asp-validation-for="AircraftType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Origin" class="form-label fw-bold">Origin</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-map-pin"></i></span>
                                    <input asp-for="Origin" class="form-control" />
                                </div>
                                <span asp-validation-for="Origin" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Destination" class="form-label fw-bold">Destination</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-map-pin"></i></span>
                                    <input asp-for="Destination" class="form-control" />
                                </div>
                                <span asp-validation-for="Destination" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DepartureTime" class="form-label fw-bold">Departure Time</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-clock"></i></span>
                                    <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
                                </div>
                                <span asp-validation-for="DepartureTime" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ArrivalTime" class="form-label fw-bold">Arrival Time</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-clock"></i></span>
                                    <input asp-for="ArrivalTime" type="datetime-local" class="form-control" />
                                </div>
                                <span asp-validation-for="ArrivalTime" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalSeats" class="form-label fw-bold">Total Seats</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-chair"></i></span>
                                    <input asp-for="TotalSeats" type="number" class="form-control" disabled />
                                </div>
                                <small class="text-muted d-block mt-1">Cannot be modified after creation</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AvailableSeats" class="form-label fw-bold">Available Seats</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-check-circle"></i></span>
                                    <input asp-for="AvailableSeats" type="number" class="form-control" disabled />
                                </div>
                                <small class="text-muted d-block mt-1">Updated automatically from bookings</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-warning px-4 fw-bold">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
