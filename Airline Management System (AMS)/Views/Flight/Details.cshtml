@model Airline_Management_System__AMS_.Models.Flight

@{
    ViewData["Title"] = "Flight Details";
    var bookedSeats = (Model.Seats?.Count ?? 0) - Model.AvailableSeats;
    var totalSeats = Model.Seats?.Count ?? 0;
    var occupancyPercent = totalSeats > 0 ? (bookedSeats * 100.0 / totalSeats) : 0;
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<style>
    .avatar-circle.bg-primary {
        background-color: #002244 !important;
    }

    .text-primary {
        color: #002244 !important;
    }

    .btn-warning {
        background-color: #FF6600 !important;
        border-color: #FF6600 !important;
        color: white !important;
    }

    .btn-warning:hover {
        background-color: #CC5200 !important;
        border-color: #CC5200 !important;
    }

    .card-header h5 {
        color: #002244 !important;
    }

    .flight-stat {
        text-align: center;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .flight-stat .stat-number {
        font-size: 2rem;
        font-weight: bold;
        color: #002244;
    }

    .flight-stat .stat-label {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }
</style>

<div class="container py-4">
    <div class="row">
        <!-- Flight Profile Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 rounded-3 h-100">
                <div class="card-body text-center pt-5">
                    <div class="avatar-circle mx-auto mb-3 bg-primary text-white d-flex align-items-center justify-content-center rounded-circle shadow-sm"
                        style="width: 100px; height: 100px; font-size: 2.5rem;">
                        <i class="fas fa-plane"></i>
                    </div>
                    <h3 class="fw-bold text-primary mb-1">@Model.FlightNumber</h3>
                    <p class="text-muted mb-3">Flight ID: #@Model.FlightId</p>

                    @if (Model.DepartureTime < DateTime.Now)
                    {
                        <span class="badge bg-info mb-4 px-3 py-2">DEPARTED</span>
                    }
                    else if ((Model.DepartureTime - DateTime.Now).TotalHours < 24)
                    {
                        <span class="badge bg-danger mb-4 px-3 py-2">DEPARTING SOON</span>
                    }
                    else
                    {
                        <span class="badge bg-success mb-4 px-3 py-2">ACTIVE</span>
                    }

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.FlightId" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit Flight
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.FlightId" class="btn btn-outline-danger"
                            onclick="return confirm('Are you sure you want to delete this flight? This action cannot be undone.');">
                            <i class="fas fa-trash me-2"></i>Delete Flight
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details & Statistics -->
        <div class="col-md-8 mb-4">
            <div class="card shadow border-0 rounded-3 mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-info-circle me-2"></i>Flight Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold">Route</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="fas fa-map-pin text-primary me-2"></i>
                                <span class="fw-medium">@Model.Origin <i class="fas fa-arrow-right mx-1"></i>
                                    @Model.Destination</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold">Aircraft Type</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="fas fa-shuttle-space text-primary me-2"></i>
                                <span class="fw-medium">@Model.AircraftType</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold">Departure</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="fas fa-plane-departure text-primary me-2"></i>
                                <span class="fw-medium">@Model.DepartureTime.ToString("MMM dd, yyyy hh:mm tt")</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold">Arrival</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="fas fa-plane-arrival text-primary me-2"></i>
                                <span class="fw-medium">@Model.ArrivalTime.ToString("MMM dd, yyyy hh:mm tt")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow border-0 rounded-3 mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-chair me-2"></i>Seat Availability</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4 flight-stat">
                            <div class="stat-number text-success">@totalSeats</div>
                            <div class="stat-label">Total Seats</div>
                        </div>
                        <div class="col-md-4 flight-stat">
                            <div class="stat-number text-danger">@bookedSeats</div>
                            <div class="stat-label">Booked Seats</div>
                        </div>
                        <div class="col-md-4 flight-stat">
                            <div class="stat-number text-info">@Model.AvailableSeats</div>
                            <div class="stat-label">Available Seats</div>
                        </div>
                    </div>

                    <div class="progress mt-4" style="height: 30px;">
                        <div class="progress-bar @(occupancyPercent < 50 ? "bg-success" : occupancyPercent < 80 ? "bg-warning" : "bg-danger")"
                            role="progressbar" style="width: @occupancyPercent%"
                            aria-valuenow="@((int)occupancyPercent)" aria-valuemin="0" aria-valuemax="100">
                            <span class="text-dark fw-bold">@occupancyPercent.ToString("F1")% Occupancy (@bookedSeats/@totalSeats)
                            </span>
                        </div>
                    </div>

                    <p class="text-muted small mt-3 mb-0">
                        @if (occupancyPercent < 50)
                        {
                            <i class="fas fa-check-circle text-success me-1"></i>
                            <span>Good availability</span>
                        }
                        else if (occupancyPercent < 80)
                        {
                            <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                            <span>Limited availability</span>
                        }
                        else
                        {
                            <i class="fas fa-exclamation-circle text-danger me-1"></i>
                            <span>Very limited availability</span>
                        }
                    </p>
                </div>
            </div>

            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-list me-2"></i>Current Bookings</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Passenger</th>
                                    <th>Seat Number</th>
                                    <th>Booking Date</th>
                                    <th>Price</th>
                                    <th class="text-end pe-4">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Bookings != null && Model.Bookings.Any())
                                {
                                    @foreach (var booking in Model.Bookings)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-primary">
                                                @if (booking.Passenger != null)
                                                {
                                                    @booking.Passenger.FullName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown</span>
                                                }
                                            </td>
                                            <td>@booking.SeatNumber</td>
                                            <td>@booking.BookingDate.ToShortDateString()</td>
                                            <td class="fw-bold">$@booking.TicketPrice.ToString("N2")</td>
                                            <td class="text-end pe-4">
                                                @if (booking.Status == Airline_Management_System__AMS_.Models.BookingStatus.Booked)
                                                {
                                                    <span class="badge bg-primary">Booked</span>
                                                }
                                                else if (booking.Status == Airline_Management_System__AMS_.Models.BookingStatus.CheckedIn)
                                                {
                                                    <span class="badge bg-success">Checked In</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Cancelled</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            <i class="fas fa-calendar-alt fa-2x mb-2 d-block opacity-25"></i>
                                            No bookings for this flight yet.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-link text-decoration-none text-muted">
            <i class="fas fa-arrow-left me-2"></i>Back to Flight List
        </a>
    </div>
</div>
