@model IEnumerable<Airline_Management_System__AMS_.Models.Passenger>

@{
    ViewData["Title"] = "Passenger Management";
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 text-primary fw-bold">
                <i class="fas fa-users me-2"></i>Passenger Management
            </h1>
            <p class="text-muted">Manage all registered passengers in the system</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Passenger
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-white py-3 border-bottom">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0 text-primary fw-bold">Passenger List</h5>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" id="passengerSearch" class="form-control border-start-0 bg-light"
                            placeholder="Search passengers...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Full Name</th>
                            <th>Contact Info</th>
                            <th>Passport / ID</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="passengerTableBody">
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsArchived ? "bg-light text-muted" : "")">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3 @(item.IsArchived ? "bg-secondary" : "bg-primary") text-white d-flex align-items-center justify-content-center rounded-circle"
                                            style="width: 40px; height: 40px;">
                                            @item.FirstName.Substring(0, 1)@item.LastName.Substring(0, 1)
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.FullName</div>
                                            <small class="text-muted">ID: @item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div><i class="fas fa-envelope me-2 text-muted"></i>@item.Email</div>
                                    <div><i class="fas fa-phone me-2 text-muted"></i>@item.PhoneNumber</div>
                                </td>
                                <td>
                                    <div><span class="badge bg-light text-dark border">P</span> @item.PassportNumber</div>
                                    @if (!string.IsNullOrEmpty(item.NationalId))
                                    {
                                        <div class="mt-1"><span class="badge bg-light text-dark border">N</span>
                                            @item.NationalId</div>
                                    }
                                </td>
                                <td>
                                    @if (item.IsArchived)
                                    {
                                        <span class="badge bg-secondary">Archived</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                            class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"
                                            title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (item.IsArchived)
                                        {
                                            <form asp-action="Restore" asp-route-id="@item.Id" method="post" class="d-inline"
                                                onsubmit="return confirm('Restore this passenger?');">
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Restore">
                                                    <i class="fas fa-trash-restore"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                                title="Archive">
                                                <i class="fas fa-archive"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('passengerSearch').addEventListener('keyup', function () {
        let searchText = this.value.toLowerCase();
        let tableRows = document.querySelectorAll('#passengerTableBody tr');

        tableRows.forEach(row => {
            let rowText = row.innerText.toLowerCase();
            if (rowText.includes(searchText)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>
