@model Airline_Management_System__AMS_.Models.Passenger

@{
    ViewData["Title"] = "Passenger Details";
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<style>
    .avatar-circle.bg-primary {
        background-color: #002244 !important;
    }

    .text-primary {
        color: #002244 !important;
    }

    .btn-warning {
        background-color: #FF6600 !important;
        border-color: #FF6600 !important;
        color: white !important;
    }

    .btn-warning:hover {
        background-color: #CC5200 !important;
        border-color: #CC5200 !important;
    }

    .card-header h5 {
        color: #002244 !important;
    }
</style>

<div class="container py-4">
    <div class="row">
        <!-- Passenger Profile Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 rounded-3 h-100">
                <div class="card-body text-center pt-5">
                    <div class="avatar-circle mx-auto mb-3 @(Model.IsArchived ? "bg-secondary" : "bg-primary") text-white d-flex align-items-center justify-content-center rounded-circle shadow-sm"
                        style="width: 100px; height: 100px; font-size: 2.5rem;">
                        @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                    </div>
                    <h3 class="fw-bold text-primary mb-1">@Model.FullName</h3>
                    <p class="text-muted mb-3">Passenger ID: #@Model.Id</p>

                    @if (Model.IsArchived)
                    {
                        <span class="badge bg-secondary mb-4 px-3 py-2">ARCHIVED</span>
                    }
                    else
                    {
                        <span class="badge bg-success mb-4 px-3 py-2">ACTIVE</span>
                    }

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                        @if (Model.IsArchived)
                        {
                            <form asp-action="Restore" asp-route-id="@Model.Id" method="post" class="d-inline"
                                onsubmit="return confirm('Restore this passenger?');">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-trash-restore me-2"></i>Restore Profile
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="fas fa-archive me-2"></i>Archive Profile
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Details & History -->
        <div class="col-md-8 mb-4">
            <div class="card shadow border-0 rounded-3 mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-info-circle me-2"></i>Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold">Email Address</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="fas fa-envelope text-primary me-2"></i>
                                <span class="fw-medium">@Model.Email</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold">Phone Number</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="fas fa-phone text-primary me-2"></i>
                                <span class="fw-medium">@Model.PhoneNumber</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold">Passport Number</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="fas fa-passport text-primary me-2"></i>
                                <span class="fw-medium">@Model.PassportNumber</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold">National ID</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="fas fa-id-card text-primary me-2"></i>
                                <span class="fw-medium">
                                    @if (!string.IsNullOrEmpty(Model.NationalId))
                                    {
                                        @Model.NationalId
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Not provided</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-history me-2"></i>Booking History</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Flight</th>
                                    <th>Route</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Bookings != null && Model.Bookings.Any())
                                {
                                    @foreach (var booking in Model.Bookings)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-primary">
                                                @if (booking.Flight != null)
                                                {
                                                    @booking.Flight.FlightNumber
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (booking.Flight != null)
                                                {
                                                    <span>@booking.Flight.Origin <i
                                                            class="fas fa-arrow-right mx-1 text-muted small"></i>
                                                        @booking.Flight.Destination</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Flight Removed</span>
                                                }
                                            </td>
                                            <td>@booking.BookingDate.ToShortDateString()</td>
                                            <td>
                                                @if (booking.Status ==
                                               Airline_Management_System__AMS_.Models.BookingStatus.Booked)
                                                {
                                                    <span class="badge bg-primary">Booked</span>
                                                }
                                                else if (booking.Status ==
                                                Airline_Management_System__AMS_.Models.BookingStatus.CheckedIn)
                                                {
                                                    <span class="badge bg-success">Checked In</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Cancelled</span>
                                                }
                                            </td>
                                            <td class="text-end pe-4 fw-bold">$@booking.TicketPrice.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            <i class="fas fa-ticket-alt fa-2x mb-2 d-block opacity-25"></i>
                                            No bookings found for this passenger.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-link text-decoration-none text-muted">
            <i class="fas fa-arrow-left me-2"></i>Back to Passenger List
        </a>
    </div>
</div>
