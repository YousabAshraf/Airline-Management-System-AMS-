@model Airline_Management_System__AMS_.Models.Booking

<div class="ticket-container">
    <!-- ترويسة التذكرة -->
    <div class="ticket-header">
        <div class="airline-logo">
            <i class="fas fa-plane"></i>
            <span>AIRLINE</span>
        </div>
        <div class="ticket-type">
            <span>E-TICKET</span>
            <div class="barcode">
                <i class="fas fa-barcode"></i>
                @Model.Flight.FlightNumber-@Model.Id.ToString("D6")
            </div>
        </div>
    </div>

    <!-- معلومات الرحلة -->
    <div class="flight-info-section">
        <div class="route-info">
            <div class="city">
                <span class="code">@Model.Flight.Origin</span>
                <span class="name">Departure</span>
            </div>
            <div class="plane-icon">
                <i class="fas fa-plane"></i>
            </div>
            <div class="city">
                <span class="code">@Model.Flight.Destination</span>
                <span class="name">Destination</span>
            </div>
        </div>

        <div class="flight-details">
            <div class="detail-item">
                <span class="label">Flight No.</span>
                <span class="value">@Model.Flight.FlightNumber</span>
            </div>
            <div class="detail-item">
                <span class="label">Date</span>
                <span class="value">@Model.Flight.DepartureTime.ToString("ddd, MMM dd")</span>
            </div>
            <div class="detail-item">
                <span class="label">Departure Time</span>
                <span class="value">@Model.Flight.DepartureTime.ToString("hh:mm tt")</span>
            </div>
            <div class="detail-item">
                <span class="label">Arrival Time</span>
                <span class="value">@Model.Flight.ArrivalTime.ToString("hh:mm tt")</span>

            </div>
        </div>
    </div>

    <!-- معلومات الراكب والمقعد -->
    <div class="passenger-seat-section">
        <div class="passenger-info">
            <h3><i class="fas fa-user"></i> Passenger Information</h3>
            <div class="info-grid">
                <div class="info-item">
                    <span class="label">Full Name</span>
                    <span class="value">@Model.Passenger.FullName</span>
                </div>
                <div class="info-item">
                    <span class="label">Email</span>
                    <span class="value">@Model.Passenger.Email</span>
                </div>
                <div class="info-item">
                    <span class="label">Phone</span>
                    <span class="value">@Model.Passenger.PhoneNumber</span>
                </div>
                <div class="info-item">
                    <span class="label">Passport No.</span>
                    <span class="value">@Model.Passenger.PassportNumber</span>
                </div>
                <div class="info-item">
                    <span class="label">National ID</span>
                    <span class="value">@Model.Passenger.NationalId</span>
                </div>
            </div>
        </div>

        <div class="seat-info">
            <div class="seat-card">
                <div class="seat-header">
                    <i class="fas fa-chair"></i>
                    <span>Seat Assignment</span>
                </div>
                <div class="seat-details">
                    <div class="seat-number">@Model.SeatNumber</div>
                    <div class="seat-class">@ViewBag.Seat?.Class</div>
                    <div class="seat-price">@(ViewBag.Seat?.SeatPrice?.ToString("C") ?? Model.TicketPrice.ToString("C"))</div>
                </div>
            </div>
        </div>
    </div>

    <!-- معلومات الحجز -->
    <div class="booking-info-section">
        <div class="booking-card">
            <h3><i class="fas fa-receipt"></i> Booking Details</h3>
            <div class="info-grid">
                <div class="info-item">
                    <span class="label">Booking Reference</span>
                    <span class="value">AMS-@Model.Id.ToString("D6")</span>
                </div>
                <div class="info-item">
                    <span class="label">Booking Date</span>
                    <span class="value">@Model.BookingDate.ToString("f")</span>
                </div>
                <div class="info-item">
                    <span class="label">Ticket Price</span>
                    <span class="value">@Model.TicketPrice.ToString("C")</span>
                </div>
                <div class="info-item">
                    <span class="label">Status</span>
                    <span class="status-badge @Model.Status.ToString().ToLower()">
                        @Model.Status
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- إرشادات مهمة -->
    <div class="instructions-section">
        <h4><i class="fas fa-info-circle"></i> Important Instructions</h4>
        <ul>
            <li><i class="fas fa-check-circle"></i> Please arrive at the airport at least 2 hours before departure</li>
            <li><i class="fas fa-check-circle"></i> Bring valid identification (Passport/National ID)</li>
            <li><i class="fas fa-check-circle"></i> Online check-in opens 24 hours before departure</li>
            <li><i class="fas fa-check-circle"></i> Baggage allowance: 23kg checked + 7kg cabin</li>
        </ul>
    </div>

    <!-- أزرار الإجراءات -->
    <div class="actions-section">
        <a href="/Booking/MyBookings" class="btn-back">
            <i class="fas fa-arrow-left"></i> Back to My Bookings
        </a>
        <button onclick="window.print()" class="btn-print">
            <i class="fas fa-print"></i> Print Ticket
        </button>
        @if (Model.Status == BookingStatus.Booked)
        {
            <form asp-action="Cancel" asp-controller="Booking" method="post" onsubmit="return confirm('Are you sure you want to cancel this booking?');" style="display:inline;">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn-cancel">
                    <i class="fas fa-times"></i> Cancel Booking
                </button>
            </form>
        }
    </div>

    <!-- Footer -->
    <div class="ticket-footer">
        <p><i class="fas fa-headset"></i> For assistance, call +1 (555) 123-4567</p>
        <p><i class="fas fa-globe"></i> www.airline-ams.com</p>
    </div>
</div>

<style>
    :root {
        --primary-color: #ff6600;
        --primary-dark: #cc5200;
        --secondary-color: #333333;
        --light-gray: #f8f9fa;
        --border-color: #e0e0e0;
        --text-color: #333333;
        --text-light: #666666;
        --success-color: #28a745;
        --danger-color: #dc3545;
        --warning-color: #ffc107;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        padding: 20px;
    }

    .ticket-container {
        max-width: 1000px;
        margin: 0 auto;
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        position: relative;
    }

    /* الترويسة */
    .ticket-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        padding: 25px 35px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .airline-logo {
        display: flex;
        align-items: center;
        gap: 15px;
    }

        .airline-logo i {
            font-size: 2.5rem;
        }

        .airline-logo span {
            font-size: 1.8rem;
            font-weight: 700;
            letter-spacing: 2px;
        }

    .ticket-type {
        text-align: right;
    }

        .ticket-type span {
            display: block;
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 5px;
        }

    .barcode {
        font-family: monospace;
        font-size: 1.1rem;
        letter-spacing: 3px;
        color: rgba(255, 255, 255, 0.9);
    }

    /* معلومات الرحلة */
    .flight-info-section {
        padding: 35px;
        background: var(--light-gray);
    }

    .route-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .city {
        text-align: center;
        flex: 1;
    }

        .city .code {
            font-size: 3.5rem;
            font-weight: 800;
            color: var(--primary-color);
            display: block;
            margin-bottom: 10px;
        }

        .city .name {
            font-size: 1.1rem;
            color: var(--text-light);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    .plane-icon {
        flex: 0.5;
        text-align: center;
    }

        .plane-icon i {
            font-size: 2.5rem;
            color: var(--primary-color);
            animation: float 3s ease-in-out infinite;
        }

    .flight-details {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .detail-item {
        text-align: center;
        padding: 15px;
    }

        .detail-item .label {
            display: block;
            font-size: 0.9rem;
            color: var(--text-light);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .detail-item .value {
            display: block;
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--secondary-color);
        }

    /* معلومات الراكب والمقعد */
    .passenger-seat-section {
        padding: 35px;
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
        border-bottom: 2px dashed var(--border-color);
    }

        .passenger-seat-section h3 {
            color: var(--primary-color);
            margin-bottom: 25px;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .info-item {
        padding: 15px;
        background: var(--light-gray);
        border-radius: 10px;
    }

        .info-item .label {
            display: block;
            font-size: 0.9rem;
            color: var(--text-light);
            margin-bottom: 5px;
        }

        .info-item .value {
            display: block;
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--secondary-color);
        }

    .seat-card {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        padding: 25px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 10px 20px rgba(255, 102, 0, 0.2);
    }

    .seat-header {
        font-size: 1.1rem;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .seat-details {
        margin-top: 15px;
    }

    .seat-number {
        font-size: 4rem;
        font-weight: 800;
        line-height: 1;
        margin-bottom: 10px;
    }

    .seat-class {
        font-size: 1.2rem;
        margin-bottom: 15px;
        opacity: 0.9;
    }

    .seat-price {
        font-size: 1.5rem;
        font-weight: 700;
        background: rgba(255, 255, 255, 0.2);
        padding: 10px 20px;
        border-radius: 25px;
        display: inline-block;
    }

    /* معلومات الحجز */
    .booking-info-section {
        padding: 35px;
    }

    .booking-card {
        background: var(--light-gray);
        padding: 30px;
        border-radius: 15px;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .status-badge.booked {
            background: var(--success-color);
            color: white;
        }

        .status-badge.checkedin {
            background: var(--warning-color);
            color: #000;
        }

        .status-badge.cancelled {
            background: var(--danger-color);
            color: white;
        }

    /* الإرشادات */
    .instructions-section {
        padding: 0 35px 35px;
    }

        .instructions-section h4 {
            color: var(--secondary-color);
            margin-bottom: 20px;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .instructions-section ul {
            list-style: none;
            padding: 0;
        }

            .instructions-section ul li {
                padding: 12px 0;
                border-bottom: 1px solid var(--border-color);
                display: flex;
                align-items: center;
                gap: 15px;
                color: var(--text-light);
            }

                .instructions-section ul li i {
                    color: var(--success-color);
                    font-size: 1.1rem;
                }

    /* أزرار الإجراءات */
    .actions-section {
        padding: 30px 35px;
        background: var(--light-gray);
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .btn-back, .btn-print, .btn-cancel {
        padding: 14px 28px;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
    }

    .btn-back {
        background: var(--secondary-color);
        color: white;
    }

        .btn-back:hover {
            background: #444;
            transform: translateY(-2px);
        }

    .btn-print {
        background: white;
        color: var(--secondary-color);
        border: 2px solid var(--secondary-color);
    }

        .btn-print:hover {
            background: var(--secondary-color);
            color: white;
            transform: translateY(-2px);
        }

    .btn-cancel {
        background: var(--danger-color);
        color: white;
    }

        .btn-cancel:hover {
            background: #c82333;
            transform: translateY(-2px);
        }

    /* Footer */
    .ticket-footer {
        padding: 25px 35px;
        background: var(--secondary-color);
        color: white;
        text-align: center;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .ticket-footer p {
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 0.95rem;
        }

        .ticket-footer i {
            color: var(--primary-color);
        }

    /* تأثيرات الحركة */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    /* تصميم متجاوب */
    @@media (max-width: 992px) {
        .passenger-seat-section {
            grid-template-columns: 1fr;
        }

        .flight-details {
            grid-template-columns: repeat(2, 1fr);
        }

        .info-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .ticket-header {
            flex-direction: column;
            text-align: center;
            gap: 20px;
        }

        .flight-details {
            grid-template-columns: 1fr;
        }

        .actions-section {
            flex-direction: column;
        }

        .btn-back, .btn-print, .btn-cancel {
            width: 100%;
            justify-content: center;
        }

        .ticket-footer {
            flex-direction: column;
            gap: 15px;
        }
    }

    @@media print {
        body {
            background: white;
            padding: 0;
        }

        .ticket-container {
            box-shadow: none;
            border-radius: 0;
        }

        .actions-section {
            display: none;
        }

        .btn-print {
            display: none;
        }
    }
</style>

