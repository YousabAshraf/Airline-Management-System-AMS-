@model Airline_Management_System__AMS_.ViewModels.BookingEditViewModel

@{
    ViewData["Title"] = "Edit Booking";
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0 fw-bold"><i class="fas fa-ticket-alt me-2"></i>Edit Booking</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditByAdmin" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="BookingId" />
                        <input type="hidden" asp-for="FlightId" />
                        <input type="hidden" asp-for="PassengerId" />

                        <div class="mb-3">
                            <label asp-for="PassengerName" class="form-label fw-bold">Passenger Name</label>
                            <input asp-for="PassengerName" class="form-control" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FlightNumber" class="form-label fw-bold">Flight</label>
                            <input asp-for="FlightNumber" class="form-control" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrentSeat" class="form-label fw-bold">Seat Number</label>
                            <input asp-for="CurrentSeat" class="form-control" />
                            <span asp-validation-for="CurrentSeat" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TicketPrice" class="form-label fw-bold">Ticket Price</label>
                            <input asp-for="TicketPrice" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="TicketPrice" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Status</label>
                            <select asp-for="Status" class="form-select"> <option value="Booked">Booked</option>
                                <option value="CheckedIn">Checked-In</option> 
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-warning px-4 fw-bold">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

