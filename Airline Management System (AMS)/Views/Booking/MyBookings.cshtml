@model List<Airline_Management_System__AMS_.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="bookings-container">
    <!-- Header with stats -->
    <div class="bookings-header">
        <div class="header-content">
            <h1 class="section-title">
                <i class="fas fa-suitcase-rolling"></i> My Bookings
            </h1>
            <p class="subtitle">Manage all your flight bookings in one place</p>
        </div>

        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-plane"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-number">@Model.Count</span>
                    <span class="stat-label">Total Bookings</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon active">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-number">@Model.Count(b => b.Status == BookingStatus.Booked)</span>
                    <span class="stat-label">Active</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon cancelled">
                    <i class="fas fa-times-circle"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-number">@Model.Count(b => b.Status == BookingStatus.Cancelled)</span>
                    <span class="stat-label">Cancelled</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <div class="filter-tabs">
            <button class="filter-btn active" data-filter="all">All Bookings</button>
            <button class="filter-btn" data-filter="booked">Active (@Model.Count(b => b.Status == BookingStatus.Booked))</button>
            <button class="filter-btn" data-filter="checkedin">Checked In (@Model.Count(b => b.Status == BookingStatus.CheckedIn))</button>
            <button class="filter-btn" data-filter="cancelled">Cancelled (@Model.Count(b => b.Status == BookingStatus.Cancelled))</button>
        </div>

        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" placeholder="Search by flight number, destination, or seat...">
        </div>
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-plane-slash"></i>
            </div>
            <h3>No Bookings Yet</h3>
            <p>You haven't made any flight bookings. Start your journey by booking a flight!</p>
            <a href="/Flight" class="cta-btn">
                <i class="fas fa-search"></i> Search Flights
            </a>
        </div>
    }
    else
    {
        <!-- Bookings Grid -->
        <div class="bookings-grid">
            @foreach (var booking in Model.OrderByDescending(b => b.Flight.DepartureTime))
            {
                <div class="booking-card" data-status="@booking.Status.ToString().ToLower()">
                    <!-- Booking Header -->
                    <div class="booking-header">
                        <div class="flight-info">
                            <span class="airline-badge">
                                <i class="fas fa-plane"></i> AIRLINE
                            </span>
                            <div class="flight-number">@booking.Flight.FlightNumber</div>
                        </div>

                        <div class="booking-status">
                            <span class="status-badge @booking.Status.ToString().ToLower()">
                                @booking.Status
                            </span>
                            <div class="booking-id">Ref: AMS-@booking.Id.ToString("D6")</div>
                        </div>
                    </div>

                    <!-- Route Information -->
                    <div class="route-section">
                        <div class="city-info">
                            <div class="city-code">@booking.Flight.Origin</div>
                            <div class="city-name">@booking.Flight.DepartureTime.ToString("ddd, MMM dd")</div>
                            <div class="time">@booking.Flight.DepartureTime.ToString("hh:mm tt")</div>
                        </div>

                        <div class="journey-line">
                            <div class="duration">
                                @{
                                    var duration = booking.Flight.ArrivalTime - booking.Flight.DepartureTime;
                                    @($"{duration.Hours}h {duration.Minutes}m")
                                }
                            </div>
                            <div class="line">
                                <i class="fas fa-plane"></i>
                            </div>
                            <div class="stops">Direct</div>
                        </div>

                        <div class="city-info">
                            <div class="city-code">@booking.Flight.Destination</div>
                            <div class="city-name">@booking.Flight.ArrivalTime.ToString("ddd, MMM dd")</div>
                            <div class="time">@booking.Flight.ArrivalTime.ToString("hh:mm tt")</div>
                        </div>
                    </div>

                    <!-- Booking Details -->
                    <div class="details-grid">
                        <div class="detail-item">
                            <span class="detail-label">
                                <i class="fas fa-user"></i> Passenger
                            </span>
                            <span class="detail-value">@booking.Passenger.FullName</span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">
                                <i class="fas fa-chair"></i> Seat
                            </span>
                            <span class="detail-value seat-number">@booking.SeatNumber</span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">
                                <i class="fas fa-tag"></i> Price
                            </span>
                            <span class="detail-value price">@booking.TicketPrice.ToString("C")</span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">
                                <i class="fas fa-calendar"></i> Booked On
                            </span>
                            <span class="detail-value">@booking.BookingDate.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>

                    @* <!-- Countdown (if upcoming flight) -->
                    @if (booking.Status == BookingStatus.Booked && booking.Flight.DepartureTime > DateTime.Now)
                    {
                        <div class="countdown-section">
                            <span class="countdown-label">
                                <i class="fas fa-clock"></i> Departs in
                            </span>
                            <span class="countdown-timer" data-departure="@booking.Flight.DepartureTime.ToString("o")">
                                Calculating...
                            </span>
                        </div> 
                    }*@

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <a href="/Booking/Details/@booking.Id" class="btn-primary">
                            <i class="fas fa-ticket-alt"></i> View Ticket
                        </a>

                        @if (booking.Status == BookingStatus.Booked)
                        {
                            <div class="btn-group">
                                <a href="/Booking/Edit/@booking.Id" class="btn-secondary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>

                                @if (booking.Flight.DepartureTime > DateTime.Now.AddHours(24))
                                {
                                    <form asp-action="Cancel" asp-controller="Booking" method="post" onsubmit="return confirm('Are you sure you want to cancel this booking?');" style="display:inline;">
                                        <input type="hidden" name="id" value="@booking.Id" />
                                        <button type="submit" class="btn-danger">
                                            <i class="fas fa-times"></i> Cancel
                                        </button>
                                    </form>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }

    <!-- Quick Actions -->
    <div class="quick-actions">
        <a href="/home" class="quick-action-btn">
            <i class="fas fa-search"></i>
            <span>Book New Flight</span>
        </a>

        

        <button onclick="window.print()" class="quick-action-btn">
            <i class="fas fa-print"></i>
            <span>Print All</span>
        </button>
    </div>
</div>

<style>
