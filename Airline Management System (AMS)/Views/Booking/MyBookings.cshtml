        }

    .booking-id {
        font-size: 0.9rem;
        color: var(--text-light);
        margin-top: 5px;
    }

    /* Route Section */
    .route-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 30px 0;
        padding: 20px;
        background: var(--light-gray);
        border-radius: 15px;
