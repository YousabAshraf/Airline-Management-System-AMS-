@model Airline_Management_System__AMS_.Models.Passenger

@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-gradient bg-primary text-white py-3">
                    <h4 class="mb-0 fw-bold"><i class="fas fa-user-circle me-2"></i>Edit My Profile</h4>
                </div>
                <div class="card-body p-4 bg-white">
                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="IsArchived" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-bold text-secondary">First Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i
                                            class="fas fa-user text-primary"></i></span>
                                    <input asp-for="FirstName" class="form-control border-start-0 ps-0"
                                        placeholder="Enter first name" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-bold text-secondary">Last Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i
                                            class="fas fa-user text-primary"></i></span>
                                    <input asp-for="LastName" class="form-control border-start-0 ps-0"
                                        placeholder="Enter last name" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-bold text-secondary">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i
                                            class="fas fa-envelope text-primary"></i></span>
                                    <input asp-for="Email" class="form-control border-start-0 ps-0" type="email"
                                        placeholder="name@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                                <small class="text-muted fst-italic">Note: Changing email will update your login
                                    username.</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label fw-bold text-secondary">Phone
                                    Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i
                                            class="fas fa-phone text-primary"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control border-start-0 ps-0"
                                        placeholder="+1234567890" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PassportNumber" class="form-label fw-bold text-secondary">Passport
                                    Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i
                                            class="fas fa-passport text-primary"></i></span>
                                    <input asp-for="PassportNumber" class="form-control border-start-0 ps-0"
                                        placeholder="Passport No." />
                                </div>
                                <span asp-validation-for="PassportNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="NationalId" class="form-label fw-bold text-secondary">National
                                    ID</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i
                                            class="fas fa-id-card text-primary"></i></span>
                                    <input asp-for="NationalId" class="form-control border-start-0 ps-0"
                                        placeholder="National ID" />
                                </div>
                                <span asp-validation-for="NationalId" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4 text-muted">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="UserDashboard" asp-action="Index"
                                class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary px-5 rounded-pill fw-bold shadow-sm">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
