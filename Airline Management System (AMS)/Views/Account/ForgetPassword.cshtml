@{
    ViewData["Title"] = "Forgot Password";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #002244 0%, #004488 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        padding: 40px 20px;
    }

    body::before {
        content: '';
        position: absolute;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(0, 119, 204, 0.15) 0%, transparent 70%);
        border-radius: 50%;
        top: -200px;
        right: -150px;
        animation: float 10s ease-in-out infinite;
    }

    body::after {
        content: '';
        position: absolute;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(255, 102, 0, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        bottom: -150px;
        left: -100px;
        animation: float 12s ease-in-out infinite reverse;
    }

    @@keyframes float {

        0%,
        100% {
            transform: translateY(0) translateX(0);
        }

        50% {
            transform: translateY(-20px) translateX(20px);
        }
    }

    .forgot-container {
        background: #FFFFFF;
        border-radius: 16px;
        padding: 50px 45px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 460px;
        position: relative;
        z-index: 1;
        animation: slideIn 0.5s ease-out;
        border-top: 4px solid #FF6600;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .forgot-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .forgot-header .icon {
        font-size: 52px;
        margin-bottom: 15px;
        display: block;
    }

    .forgot-header h3 {
        color: #002244;
        font-size: 30px;
        font-weight: 700;
        margin: 0 0 10px 0;
        letter-spacing: -0.5px;
    }

    .forgot-header p {
        color: #4A4A4A;
        font-size: 14px;
        margin: 0;
        font-weight: 400;
        line-height: 1.5;
    }

    .alert {
        padding: 14px 16px;
        border-radius: 8px;
        margin-bottom: 24px;
        animation: fadeIn 0.3s ease-in;
        text-align: center;
        font-weight: 500;
        font-size: 14px;
    }

    .alert-success {
        background-color: #E1F0FA;
        border: 1px solid #0077CC;
        color: #004488;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-group {
        margin-bottom: 24px;
        position: relative;
    }

    .form-group label {
        display: block;
        color: #002244;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 14px;
        letter-spacing: 0.3px;
    }

    .form-control {
        width: 100%;
        padding: 13px 16px;
        border: 1px solid #E1E4E8;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.2s ease;
        background-color: #F5F7FA;
        font-weight: 400;
    }

    .form-control:focus {
        outline: none;
        border-color: #0077CC;
        background-color: #FFFFFF;
        box-shadow: 0 0 0 3px rgba(0, 119, 204, 0.1);
    }

    .form-control::placeholder {
        color: #A0AEC0;
    }

    .btn-primary {
        width: 100%;
        padding: 14px;
        background-color: #FF6600;
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 4px 12px rgba(255, 102, 0, 0.3);
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .btn-primary:hover {
        background-color: #CC5200;
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 102, 0, 0.4);
    }

    .btn-primary:active {
        transform: translateY(0);
    }

    .back-link {
        text-align: center;
        color: #4A4A4A;
        font-size: 14px;
        margin-top: 28px;
        padding-top: 24px;
        border-top: 1px solid #E1E4E8;
        font-weight: 400;
    }

    .back-link a {
        color: #0077CC;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease;
    }

    .back-link a:hover {
        color: #004488;
        text-decoration: underline;
    }

    @@media (max-width: 576px) {
        .forgot-container {
            padding: 40px 30px;
        }

        .forgot-header h3 {
            font-size: 26px;
        }

        .forgot-header .icon {
            font-size: 44px;
        }

        body {
            padding: 20px 15px;
        }
    }
</style>

<div class="forgot-container">
    <div class="forgot-header">
        <span class="icon">🔐</span>
        <h3>Forgot Password</h3>
        <p>Enter your email to receive a verification code</p>
    </div>

    <form asp-action="ForgetPassword" method="post">
        <div class="form-group">
            <label>Email Address</label>
            <input type="email" name="email" class="form-control" placeholder="Enter your email" required />
        </div>

        <button type="submit" class="btn-primary">Send Verification Code</button>
    </form>

    <div class="back-link">
        Remember your password? <a asp-controller="Account" asp-action="Login">Back to Login</a>
    </div>
</div>