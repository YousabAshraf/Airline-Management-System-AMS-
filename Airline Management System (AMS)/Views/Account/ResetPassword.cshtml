@using Airline_Management_System__AMS_.ViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #002244 0%, #004488 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        padding: 40px 20px;
    }

    body::before {
        content: '';
        position: absolute;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(0, 119, 204, 0.15) 0%, transparent 70%);
        border-radius: 50%;
        top: -200px;
        right: -150px;
        animation: float 10s ease-in-out infinite;
    }

    body::after {
        content: '';
        position: absolute;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(255, 102, 0, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        bottom: -150px;
        left: -100px;
        animation: float 12s ease-in-out infinite reverse;
    }

    @@keyframes float {

        0%,
        100% {
            transform: translateY(0) translateX(0);
        }

        50% {
            transform: translateY(-20px) translateX(20px);
        }
    }

    .reset-container {
        background: #FFFFFF;
        border-radius: 16px;
        padding: 50px 45px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 500px;
        position: relative;
        z-index: 1;
        animation: slideIn 0.5s ease-out;
        border-top: 4px solid #FF6600;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .reset-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .reset-header .icon {
        font-size: 52px;
        margin-bottom: 15px;
        display: block;
    }

    .reset-header h3 {
        color: #002244;
        font-size: 30px;
        font-weight: 700;
        margin: 0 0 10px 0;
        letter-spacing: -0.5px;
    }

    .reset-header p {
        color: #4A4A4A;
        font-size: 14px;
        margin: 0;
        font-weight: 400;
        line-height: 1.5;
    }

    .alert {
        padding: 14px 16px;
        border-radius: 8px;
        margin-bottom: 24px;
        animation: shake 0.4s ease-in-out;
        font-weight: 500;
        font-size: 13px;
    }

    .alert-danger {
        background-color: #FFE5E8;
        border: 1px solid #FF6600;
        color: #721c24;
    }

    .alert-danger p {
        margin: 5px 0;
        font-size: 13px;
    }

    .alert-danger p:first-child {
        margin-top: 0;
    }

    .alert-danger p:last-child {
        margin-bottom: 0;
    }

    @@keyframes shake {

        0%,
        100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-8px);
        }

        75% {
            transform: translateX(8px);
        }
    }

    .form-group {
        margin-bottom: 22px;
        position: relative;
    }

    .form-group label {
        display: block;
        color: #002244;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 14px;
        letter-spacing: 0.3px;
    }

    .form-control {
        width: 100%;
        padding: 13px 16px;
        border: 1px solid #E1E4E8;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.2s ease;
        background-color: #F5F7FA;
        font-weight: 400;
    }

    .form-control:focus {
        outline: none;
        border-color: #0077CC;
        background-color: #FFFFFF;
        box-shadow: 0 0 0 3px rgba(0, 119, 204, 0.1);
    }

    .form-control::placeholder {
        color: #A0AEC0;
    }

    .btn-primary {
        width: 100%;
        padding: 14px;
        background-color: #FF6600;
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 4px 12px rgba(255, 102, 0, 0.3);
        letter-spacing: 0.5px;
        text-transform: uppercase;
        margin-top: 12px;
    }

    .btn-primary:hover {
        background-color: #CC5200;
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 102, 0, 0.4);
    }

    .btn-primary:active {
        transform: translateY(0);
    }

    .password-requirements {
        background-color: #E1F0FA;
        border: 1px solid #0077CC;
        border-radius: 8px;
        padding: 14px 16px;
        margin-bottom: 22px;
    }

    .password-requirements h4 {
        color: #002244;
        font-size: 13px;
        font-weight: 700;
        margin: 0 0 10px 0;
        letter-spacing: 0.3px;
    }

    .password-requirements ul {
        margin: 0;
        padding-left: 20px;
        color: #4A4A4A;
        font-size: 12px;
        line-height: 1.8;
    }

    .password-requirements li {
        font-weight: 500;
    }

    .back-link {
        text-align: center;
        color: #4A4A4A;
        font-size: 14px;
        margin-top: 28px;
        padding-top: 24px;
        border-top: 1px solid #E1E4E8;
        font-weight: 400;
    }

    .back-link a {
        color: #0077CC;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease;
    }

    .back-link a:hover {
        color: #004488;
        text-decoration: underline;
    }

    @@media (max-width: 576px) {
        .reset-container {
            padding: 40px 30px;
        }

        .reset-header h3 {
            font-size: 26px;
        }

        .reset-header .icon {
            font-size: 44px;
        }

        body {
            padding: 20px 15px;
        }
    }
</style>



<div class="reset-container">
    <div class="reset-header">
        <span class="icon">🔑</span>
        <h3>Reset Password</h3>
        <p>Enter the verification code and your new password</p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <form asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label>Verification Code</label>
            <input asp-for="VerificationCode" class="form-control" placeholder="Enter 6-digit code" required />
        </div>

        <div class="form-group">
            <label>New Password</label>
            <input asp-for="NewPassword" class="form-control" type="password" placeholder="Enter new password"
                required />
        </div>

        <div class="form-group">
            <label>Confirm New Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password"
                required />
        </div>

        <div class="password-requirements">
            <h4>Password Requirements:</h4>
            <ul>
                <li>At least 8 characters long</li>
                <li>Contains uppercase and lowercase letters</li>
                <li>Contains at least one number</li>
                <li>Contains at least one special character</li>
            </ul>
        </div>

        <button type="submit" class="btn-primary">Reset Password</button>
    </form>

    <div class="back-link">
        Remember your password? <a asp-controller="Account" asp-action="Login">Back to Login</a>
    </div>
</div>