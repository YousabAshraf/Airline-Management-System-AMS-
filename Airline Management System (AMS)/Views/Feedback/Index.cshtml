@model IEnumerable<Airline_Management_System__AMS_.Models.Feedback>

@{
    ViewData["Title"] = "Feedback Management";
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 text-primary fw-bold">
                <i class="fas fa-comments me-2"></i>Feedback Management
            </h1>
            <p class="text-muted">Review and manage customer feedback</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body d-flex align-items-center">
                    <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-3">
                        <i class="fas fa-star fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">Avg Rating</h6>
                        <h3 class="mb-0 fw-bold text-dark">
                            @(Model.Any() ? Model.Average(f => f.Rating).ToString("0.0") : "N/A")
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body d-flex align-items-center">
                    <div class="avatar-circle bg-info bg-opacity-10 text-info me-3">
                        <i class="fas fa-comment-alt fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold mb-1">Total Reviews</h6>
                        <h3 class="mb-0 fw-bold text-dark">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Feedback List -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0 text-primary fw-bold">Recent Feedback</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Date</th>
                            <th>Customer</th>
                            <th>Rating</th>
                            <th>Flight</th>
                            <th style="width: 40%">Comment</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-nowrap">@item.CreatedAt.ToShortDateString()</td>
                                <td>
                                    <div class="fw-bold">
                                        @(item.User?.FirstName ?? "Unknown") @(item.User?.LastName ?? "")
                                    </div>
                                    <small class="text-muted">@item.User?.Email</small>
                                </td>
                                <td>
                                    <div class="text-warning text-nowrap">
                                        @for (int i = 0; i < item.Rating; i++)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (item.Flight != null)
                                    {
                                        <span class="badge bg-light text-dark border">@item.Flight.FlightNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">General</span>
                                    }
                                </td>
                                <td>
                                    <div class="text-truncate" style="max-width: 300px;" title="@item.Comment">
                                        @item.Comment
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <form asp-action="Delete" asp-route-id="@item.FeedbackId" method="post"
                                        onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
