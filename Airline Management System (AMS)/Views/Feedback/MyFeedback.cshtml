@model IEnumerable<Airline_Management_System__AMS_.Models.Feedback>

@{
    ViewData["Title"] = "My Feedback";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 fw-bold text-primary">
                <i class="fas fa-comments me-2"></i>My Feedback History
            </h1>
            <p class="text-muted">View your past ratings and reviews</p>
        </div>
        <a asp-action="Submit" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Give New Feedback
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm border-0 h-100 rounded-3">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                            <div>
                                @if (item.Flight != null)
                                {
                                    <span class="badge bg-info text-white me-2">
                                        <i class="fas fa-plane me-1"></i>Flight @item.Flight.FlightNumber
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary me-2">General</span>
                                }
                                <small class="text-muted">@item.CreatedAt.ToShortDateString()</small>
                            </div>
                            <div class="text-warning">
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                @for (int i = item.Rating; i < 5; i++)
                                {
                                    <i class="far fa-star"></i>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">"@item.Comment"</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3 text-muted" style="opacity: 0.5;">
                <i class="far fa-comment-dots fa-4x"></i>
            </div>
            <h4>No feedback yet</h4>
            <p class="text-muted mb-4">Sharing your experience helps us improve!</p>
            <a asp-action="Submit" class="btn btn-primary">
                Share Your Experience
            </a>
        </div>
    }
</div>
